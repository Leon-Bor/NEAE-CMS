<!-- Create Page -->
<div class="modal fade" id="create_page" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Create a new page</h4>
      </div>
      <form role="form" id="newPageForm" action="/cms/page" method="POST" data-toggle="validator">
      <div class="modal-body">
        
					  <label for="url" class="col-md-3">
					      URL:
					  </label>
					  <div class="col-md-9">
					  		<!-- Todo: add validation to input e.g. pattern="[A-Za-z0-9_]" -->
					      <input type="text" class="form-control" name="url" placeholder="Enter URL" data-minlength="1" required >
					      <p class="help-block">
                    	Example : "/home-page"
                </p>
					  </div>

					  <label for="pagetitle" class="col-md-3">
					      Page Title:
					  </label>
					  <div class="col-md-9">
					      <input type="text" class="form-control" name="pagetitle"placeholder="Enter Page Title" data-minlength="1" required >
					      <p class="help-block" >
                    Page title will be displayed e.g. in the browser tabs.
                </p>
					  </div>

        
      </div>
      <div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        	<button type="submit" class="btn btn-primary">Create Page</button>      
       </div>
      </form>
    </div>
  </div>
</div>


<!-- Create section -->
<div class="modal fade" id="create_section" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Create a new section</h4>
      </div>
      <form role="form" id="newSectionForm" action="/cms/section" method="POST" data-toggle="validator">
      <div class="modal-body">
        
					  <label for="name" class="col-md-3">
					      Section Name:
					  </label>
					  <div class="col-md-9">
					  		<!-- Todo: add validation to input e.g. pattern="[A-Za-z0-9_]" -->
