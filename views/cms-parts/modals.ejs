						            <option>5</option>
						            <option>6</option>
						            <option>7</option>
						            <option>8</option>
						            <option>9</option>
						            <option>10</option>
						            <option>11</option>
						            <option>12</option>
						        </select>
								    <p class="help-block">
		                    Section grid width. Example: 6 half-width, 12 full-width.
		                </p>
						    </div>            
						</div>

        
      </div>
      <div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        	<button type="submit" class="btn btn-primary">Create Page</button>      
       </div>
      </form>
    </div>
  </div>
</div>


